{
	"name": "nighttangerine-pos",
	"version": "1.0.0",
	"description": "Modern Point of Sale system with Auth0 and PostgreSQL",
	"main": "dist/index.js",
	"scripts": {
		"install:all": "pnpm install && cd frontend && pnpm install",
		"dev": "PORT=3001 tsx watch src/index.ts",
		"dev:frontend": "cd frontend && pnpm dev",
		"dev:all": "concurrently \"pnpm dev\" \"pnpm dev:frontend\"",
		"build": "tsc",
		"build:frontend": "cd frontend && pnpm build",
		"start": "node dist/index.js",
		"db:migrate": "pnpm build && knex migrate:latest --knexfile knexfile.js",
		"db:rollback": "pnpm build && knex migrate:rollback --knexfile knexfile.js",
		"db:seed": "pnpm build && knex seed:run --knexfile knexfile.js",
		"setup:db": "pnpm db:migrate && pnpm db:seed",
		"docker:up": "docker compose up -d db redis",
		"docker:down": "docker compose down",
		"docker:logs": "docker compose logs -f",
		"docker:build": "docker compose build",
		"docker:clean": "docker compose down -v --rmi all --remove-orphans && docker system prune -f",
		"docker:setup": "pnpm docker:up && sleep 15 && pnpm setup:db",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "eslint src --ext .ts,.tsx --fix",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"pos",
		"point-of-sale",
		"retail",
		"auth0",
		"postgresql",
		"typescript",
		"nodejs"
	],
	"author": "Nighttangerine",
	"license": "MIT",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.6",
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"knex": "^3.0.1",
		"morgan": "^1.10.0",
		"pg": "^8.11.3",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.8",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.8.10",
		"@types/pg": "^8.10.7",
		"@types/supertest": "^2.0.16",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.0",
		"concurrently": "^8.2.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"globals": "^16.4.0",
		"jest": "^29.7.0",
		"prettier": "^3.1.0",
		"supertest": "^7.1.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsx": "^4.1.2",
		"typescript": "^5.2.2"
	},
	"pnpm": {
		"overrides": {
			"semver": ">=7.5.2"
		},
		"peerDependencyRules": {
			"allowedVersions": {
				"eslint": "9"
			}
		}
	}
}
