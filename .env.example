# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database Configuration
# Set DB_USE_LOCAL=true to use Docker PostgreSQL, false for remote
DB_USE_LOCAL=true

# Local Docker PostgreSQL (when DB_USE_LOCAL=true)
DATABASE_URL=postgresql://postgres:postgres@db:5439/nighttangerine_pos
DB_HOST=db
DB_PORT=5439
DB_NAME=nighttangerine_pos
DB_USER=postgres
DB_PASSWORD=postgres

# Remote PostgreSQL (when DB_USE_LOCAL=false)
# REMOTE_DATABASE_URL=postgresql://username:password@remote-host:5432/database_name
# REMOTE_DB_HOST=remote-host.com
# REMOTE_DB_PORT=5432
# REMOTE_DB_NAME=nighttangerine_pos
# REMOTE_DB_USER=your_username
# REMOTE_DB_PASSWORD=your_password
# DB_SSL_MODE=require

# Redis
REDIS_URL=redis://localhost:6379

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-domain.auth0.com/api/v2/

# Application
APP_NAME=Nighttangerine POS
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100